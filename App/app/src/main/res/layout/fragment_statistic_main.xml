<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tNoInternetConnectionStatistic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:text="@string/network_needed_long"
        android:background="@color/colorAccentLight"
        android:gravity="center_horizontal"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/btChooseTimeRangeContainer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/linearlayout_border"
        android:layout_margin="10dp"
        android:padding="4dp">

        <Button
            android:id="@+id/btChooseTimeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:background="@color/colorPrimaryLight"
            android:text="@string/tChooseTimeRange"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
    android:id="@+id/frag_container_stat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
